<!--<?xml version="1.0" encoding="utf-8"?>-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
 <LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:id="@+id/detailLayout2"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:gravity="center_horizontal" 
	  android:orientation="vertical"
	  android:layout_alignParentBottom="true"
	  android:layout_alignBottom="@layout/music_display"
	  
	  >

     <LinearLayout
     android:orientation="horizontal" 
     android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        
	  <Button android:text="Preview" 
	  	      android:id="@+id/preview"
	  	      android:layout_weight="1" 
	          android:layout_width="wrap_content" 
	          android:layout_height="wrap_content">
	  </Button>
	  
	  <Button android:text="Download" 
	    		android:id="@+id/download"
	    		android:layout_weight="1" 
	    		android:layout_width="wrap_content" 
	    		android:layout_height="wrap_content">
	    		</Button>
	  <Button android:text="Queue" 
	    		android:id="@+id/queue" 
	    		android:layout_weight="1"
	    		android:layout_width="wrap_content" 
	    		android:layout_height="wrap_content">
	    		</Button>

	  <Button android:text="Play" 
	    		android:id="@+id/play" 
	    		android:visibility="gone"
	    		android:layout_weight="1"
	    		android:layout_width="wrap_content" 
	    		android:layout_height="wrap_content">
	    		</Button>

	  <Button android:text="Stop" 
	    		android:id="@+id/stop"
	    		android:visibility="gone" 
	    		android:layout_weight="1"
	    		android:layout_width="wrap_content" 
	    		android:layout_height="wrap_content">
	    		</Button>
		
				/>
 </LinearLayout>
	  </LinearLayout>
	  
	  <LinearLayout 
	  	android:id="@+id/AdsView" 
	  	android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:layout_above="@id/detailLayout2"
	   />
	        
	<ScrollView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"

			android:layout_alignParentTop="true"
	    android:layout_above="@id/AdsView"
			>
			
	  <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        
        <LinearLayout
	    	android:id="@+id/Info"
	        android:orientation="vertical"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">

				<View
			        android:layout_height="1dip"
			        android:layout_width="wrap_content"
			        android:background="#FF909090" />		        
		        <TextView
		            android:text="@string/info"
		            android:textSize="11sp"
		            
		            android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:textStyle="bold"
	                />
   		
         		<View
			        android:layout_height="1dip"
			        android:layout_width="wrap_content"
			        android:background="#FF909090" />
			        
			     <RelativeLayout 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        >

	            <TextView android:id="@+id/row_title"
    	    		android:textSize="18sp"
    	    		android:textStyle="bold"
        			android:layout_marginLeft="8dip"
         			android:layout_width="wrap_content"
         			android:layout_height="wrap_content"
         			android:layout_weight="1"
         			android:singleLine="true"/>
         
				<TextView android:id="@+id/row_artist"
         			android:textColor="#13819f"
         			android:textStyle="bold"
         			android:textSize="18sp"
         			android:layout_marginLeft="5dip"
         			android:layout_width="wrap_content"
         			android:layout_height="wrap_content"
         			android:layout_weight="1"
         			android:layout_toRightOf="@id/row_title"
         			android:singleLine="true"/>
         
                </RelativeLayout>  
		</LinearLayout>
	    
		 
	    <LinearLayout
	        android:orientation="vertical"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        >
		        
				<View
			        android:layout_height="1dip"
			        android:layout_width="wrap_content"
			        android:background="#FF909090" />		        
		        <TextView 
		        	android:id="@+id/about_ringtone"
		            android:text="@string/about"
	            	android:textSize="11sp"
		            android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:textStyle="bold"
	                />
				<View
			        android:layout_height="1dip"
			        android:layout_width="wrap_content"
			        android:background="#FF909090" />	
			    <ListView android:layout_width="fill_parent"    
		                  android:layout_height="180dip"    
		                  android:id="@+id/list_searchOthers"
		                  android:fadingEdge="none"
		                  android:clipToPadding="true"
		                  android:paddingLeft="0px">  
		        </ListView>  
		        
	    </LinearLayout>
		

	 </LinearLayout>


</ScrollView>
</RelativeLayout>