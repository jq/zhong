<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <include layout="@layout/search_bar"></include>
    
    <include layout_height="wrap_content" layout="@layout/ads"/>         
   	
   	<ScrollView 
   		android:scrollbars="none"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">
   	
	   	<LinearLayout 
	   		android:gravity="center"
	     	android:orientation="vertical"
	     	android:padding="4.0dip"
	     	android:layout_width="fill_parent"
	     	android:layout_height="wrap_content">
	   	
		   	<View 
		   		android:layout_height="1dip"
			    android:layout_width="fill_parent"
		 		android:background="#FF909090" />
		 		
		 	<TextView
				android:id="@+id/home_lastfm_top_charts"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="@string/top_charts"
				android:typeface="sans"
		     	android:textColor="#eeeeee"
				android:textSize="20sp"
				android:background="@android:drawable/list_selector_background"
				android:gravity="center"
				android:layout_margin="6.0dip">
			</TextView>	
		 		
		 	<View 
		   		android:layout_height="1dip"
			    android:layout_width="fill_parent"
		 		android:background="#FF909090" />
		   	
			<TextView
				android:id="@+id/home_top_download"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="@string/top_download"
				android:typeface="sans"
		     	android:textColor="#eeeeee"
				android:textSize="20sp"
				android:background="@android:drawable/list_selector_background"
				android:gravity="center"
				android:layout_margin="6.0dip">
			</TextView>
			
			<View android:layout_height="1dip"
			      	android:layout_width="fill_parent"
		 		  		android:background="#FF909090" />
			
			<TextView
				android:id="@+id/home_newest"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="@string/newest"
				android:textSize="20sp"
				android:typeface="sans"
		     	android:textColor="#eeeeee"
				android:background="@android:drawable/list_selector_background"
				android:gravity="center"
				android:layout_margin="6.0dip">
			</TextView>
			
			<View android:layout_height="1dip"
			      	android:layout_width="fill_parent"
		 		  		android:background="#FF909090" />
			
			<TextView
				android:id="@+id/home_all_category"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="@string/all_categories"
				android:typeface="sans"
		     	android:textColor="#eeeeee"
				android:textSize="20sp"
				android:background="@android:drawable/list_selector_background"
				android:gravity="center"
				android:layout_margin="6.0dip">
			</TextView>
			
			<View android:layout_height="1dip"
			      	android:layout_width="fill_parent"
		 		  		android:background="#FF909090" />
			
			<TextView
				android:id="@+id/home_library"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="@string/library"
				android:typeface="sans"
		     	android:textColor="#eeeeee"
				android:textSize="20sp"
				android:background="@android:drawable/list_selector_background"
				android:gravity="center"
				android:layout_margin="6.0dip">
			</TextView>
			
			<View android:layout_height="1dip"
			      	android:layout_width="fill_parent"
		 		  		android:background="#FF909090" />
			
			<TextView
				android:id="@+id/home_rate_promote"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="@string/rate_promote"
				android:typeface="sans"
		     	android:textColor="#eeeeee"
				android:textSize="20sp"
				android:background="@android:drawable/list_selector_background"
				android:gravity="center"
				android:layout_margin="6.0dip"		>
			</TextView>
			
			<View android:layout_height="1dip"
			      	android:layout_width="fill_parent"
		 		  		android:background="#FF909090" />
	 		  		
	 	</LinearLayout>
 	
 	</ScrollView>
   	
</LinearLayout>
