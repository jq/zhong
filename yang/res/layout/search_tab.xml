<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res/com.feebe.rings"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<LinearLayout android:id="@+id/AdsView" android:layout_width="fill_parent" android:layout_height="wrap_content" ></LinearLayout>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
    
    <TextView 
        android:id="@+id/search_artist"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="4dip"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:text="@string/artist"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium" />
            
    
  		
    <AutoCompleteTextView
        android:id="@+id/input_artist"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:scrollHorizontally="true"
        android:capitalize="none"
        android:gravity="fill_horizontal"
         />

		</LinearLayout>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
  		
    <TextView
        android:id="@+id/serach_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:text="@string/title"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium" />
	
	
  		            
    <AutoCompleteTextView
        android:id="@+id/input_title"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="2dip"
        android:scrollHorizontally="true"
        android:capitalize="none"
        android:gravity="fill_horizontal"
         /> 
     </LinearLayout>
         
    <LinearLayout
        	android:orientation="horizontal"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	>   
    <Button
    		android:id="@+id/search_button"
    		android:text="@string/menu_search"
    		android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1.0"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
    		/>
    <Button
    		android:id="@+id/lyrics_button"
    		android:text="@string/lyrics"
    		android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1.0"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
    		/>
    </LinearLayout>
    
   <ScrollView android:scrollbars="none"
               android:layout_width="fill_parent" android:layout_height="wrap_content">
    
    <LinearLayout android:gravity="center"
     android:orientation="vertical"
     android:padding="4.0dip"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content">
     
     <TextView android:id="@+id/myfavor"
 				android:gravity="center"
				android:textSize="20.0sp"
     		android:typeface="sans"
     		android:textColor="#eeeeee"
        android:background="@android:drawable/list_selector_background"
 				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="@string/favor"
				android:layout_margin="6.0dip"
				/>

			<View android:layout_height="1dip"
					android:layout_width="fill_parent"
		 		  android:background="#FF909090" />
	
	 <TextView android:id="@+id/hot"
			    android:gravity="center"
			    android:textSize="20.0sp"
					android:typeface="sans"
					android:textColor="#eeeeee"
					android:background="@android:drawable/list_selector_background"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:text="@string/tab_hot"
					android:layout_margin="6.0dip"/>
 		  		   
			<View android:layout_height="1dip"
					android:layout_width="fill_parent"
		 		  android:background="#FF909090" />
	
	 <TextView android:id="@+id/rank"
			    android:gravity="center"
			    android:textSize="20.0sp"
					android:typeface="sans"
					android:textColor="#eeeeee"
					android:background="@android:drawable/list_selector_background"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:text="@string/tab_browse"
					android:layout_margin="6.0dip"/>
 		  		   
			<View android:layout_height="1dip"
			      android:layout_width="fill_parent"
		 		  android:background="#FF909090" />

	 <TextView android:id="@+id/ringtone"
			    android:gravity="center"
			    android:textSize="20.0sp"
					android:typeface="sans"
					android:textColor="#eeeeee"
					android:background="@android:drawable/list_selector_background"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:text="@string/tab_download"
					android:layout_margin="6.0dip"/>
 		  		   
			<View android:layout_height="1dip"
			      android:layout_width="fill_parent"
		 		  android:background="#FF909090" />
     

	 <TextView android:id="@+id/rate"
			    android:gravity="center"
			    android:textSize="20.0sp"
					android:typeface="sans"
					android:textColor="#eeeeee"
					android:background="@android:drawable/list_selector_background"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:text="@string/rate"
					android:layout_margin="6.0dip"/>
 		  		   
			<View android:layout_height="1dip"
			      android:layout_width="fill_parent"
		 		  android:background="#FF909090" />
     
     </LinearLayout>
     </ScrollView>   
    		
  </LinearLayout>
