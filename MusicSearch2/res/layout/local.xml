<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	android:id="@+id/l1"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:qwad="http://schemas.android.com/apk/res/com.trans.music.search"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="40dip"
    	android:orientation="vertical"
    	android:background="#000099">
    	<TextView
			android:id="@+id/txtCurMusic"
			android:layout_alignParentLeft="true"
			android:layout_width="wrap_content"
			android:layout_height="20dip"
			android:singleLine="true"
			android:ellipsize="marquee"
			android:textSize="16dip"
		></TextView>
		<TextView
			android:id="@+id/txtPlayMode"
			android:layout_width="wrap_content"
			android:layout_height="20dip"
			android:layout_alignParentRight="true"
			android:textSize="16dip"
		></TextView>
	</LinearLayout>
   	<ListView android:id="@+id/local_playlist"
        android:layout_width="fill_parent" 
        android:layout_height="0dip" 
        android:stackFromBottom="false"
        android:layout_weight="1"/>   
    
    <!--<MediaController
    	android:id="@+id/mediaController"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:visibility="visible"
    ></MediaController>-->
    
    <View
		android:id="@+id/anchorView"
		android:layout_width="fill_parent"
		android:layout_height="1dip"
	></View>
    <!--<include layout_height="wrap_content" layout="@layout/ads_view"/>  -->

</LinearLayout>
