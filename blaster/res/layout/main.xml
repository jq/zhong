<?xml version="1.0" encoding="UTF-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res/com.happy.life"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			>

<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

	<ImageView
		android:layout_width="288dip"
		android:layout_height="48dip"
		android:layout_gravity="center_horizontal"
		android:src="@drawable/splash"
		android:layout_marginTop="24dip"
		android:layout_marginBottom="10dip"
	/>
	<include layout="@layout/search"/>
	
    <include layout_height="wrap_content" layout="@layout/ads"/>  
	<Button android:id="@+id/downloads_button"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/downloads"
		    android:layout_gravity="left"
	        />
	<Button android:id="@+id/advance_search_button"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/advance_search"
		    android:layout_gravity="left"
	        />
	<Button android:id="@+id/ring_button"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:drawablePadding="2dip"
	        android:text="@string/ring"
		    android:layout_gravity="right" />
</LinearLayout>
</ScrollView>
